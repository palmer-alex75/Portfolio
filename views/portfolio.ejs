  <script>
    document.addEventListener("DOMContentLoaded", function () {
      var form = document.getElementById("contact-form");
      if (!form) return;

      form.addEventListener("submit", function (event) {
        event.preventDefault();

        var formData = new FormData(form);

        fetch("https://formspree.io/f/mjklkyke", {
          method: "POST",
          body: formData,
          headers: { Accept: "application/json" },
        })
          .then(function (response) {
            if (response.ok) {
              alert("Merci pour ton message !");
              form.reset();
            } else {
              alert("Une erreur est survenue, merci de réessayer.");
            }
          })
          .catch(function () {
            alert("Une erreur est survenue, merci de réessayer.");
          });
      });
    });

    // Fonctions pour la modal Loom
    function openLoomModal(embedUrl, title) {
      var modal = document.getElementById("loom-modal");
      var iframe = document.getElementById("loom-iframe");
      var titleEl = document.getElementById("loom-modal-title");

      if (modal && iframe && titleEl) {
        iframe.src = embedUrl;
        titleEl.textContent = title;
        modal.classList.remove("hidden");
        modal.classList.add("flex");
        document.body.style.overflow = "hidden";
      }
    }

    function closeLoomModal() {
      var modal = document.getElementById("loom-modal");
      var iframe = document.getElementById("loom-iframe");

      if (modal && iframe) {
        modal.classList.add("hidden");
        modal.classList.remove("flex");
        iframe.src = "";
        document.body.style.overflow = "";
      }
    }

    // Fermer la modal avec la touche Escape
    document.addEventListener("keydown", function (event) {
      if (event.key === "Escape") {
        closeLoomModal();
      }
    });
  </script>
